extends ../layout

block content
    h2.page-header= category._id ? "修改分类":"添加分类" 
    if errors && errors.length
        div.errors
            each error in errors
                p.alert.alert-danger= error.msg


    form.vertical-form(method="post", action=action)
        div.form-group
            label(for="name") 名称
            input.form-control.input-lg(name="name", placeholder="请输入名称...",required="true",value=category.name)
        button.btn.btn-lg.btn-info(type="submit")= category._id ? "保存修改":"添加分类"

block scripts
    script $(function(){console.log('dom ready');});